<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarProdutoActivity">

    <Button
        android:id="@+id/btCadastrar"
        android:layout_width="294dp"
        android:layout_height="95dp"
        android:layout_marginBottom="88dp"
        android:text="Cadastrar"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="102dp"
        android:layout_height="69dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="136dp"
        android:text="Nome:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvURL"
        android:layout_width="205dp"
        android:layout_height="69dp"
        android:layout_marginTop="52dp"
        android:text="Imagem URL:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/tvNome"
        app:layout_constraintTop_toBottomOf="@+id/tvNome" />

    <TextView
        android:id="@+id/tvValor"
        android:layout_width="116dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:text="Valor"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/tvNome"
        app:layout_constraintTop_toBottomOf="@+id/tvURL" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginTop="52dp"
        android:text="Descrição"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/tvNome"
        app:layout_constraintTop_toBottomOf="@+id/tvValor" />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/tvNome"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etURL"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/etNome"
        app:layout_constraintTop_toBottomOf="@+id/etNome" />

    <EditText
        android:id="@+id/etValor"
        android:layout_width="185dp"
        android:layout_height="74dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/etNome"
        app:layout_constraintTop_toBottomOf="@+id/etURL" />

    <EditText
        android:id="@+id/etDescricao"
        android:layout_width="182dp"
        android:layout_height="139dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/etNome"
        app:layout_constraintTop_toBottomOf="@+id/etValor" />

</androidx.constraintlayout.widget.ConstraintLayout>