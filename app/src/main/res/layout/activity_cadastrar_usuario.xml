<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btCadastrarUsuario"
        android:layout_width="233dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="36dp"
        android:text="Cadastrar"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estadoUsuarioPt" />

    <EditText
        android:id="@+id/nomeUsuarioPt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/nomeUsuario"
        app:layout_constraintStart_toEndOf="@+id/nomeUsuario" />

    <TextView
        android:id="@+id/cpfUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="39dp"
        android:text="CPF:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeUsuario" />

    <TextView
        android:id="@+id/nomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Nome:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cepUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="4dp"
        android:text="CEP:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/cepUsuraioPt"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cepUsuraioPt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/cpfUsuarioPt"
        app:layout_constraintTop_toBottomOf="@+id/cpfUsuarioPt" />

    <EditText
        android:id="@+id/cpfUsuarioPt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/cpfUsuario"
        app:layout_constraintStart_toStartOf="@+id/nomeUsuarioPt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="23dp"
        android:text="Rua:"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ruaUsuarioPt"
        app:layout_constraintEnd_toStartOf="@+id/ruaUsuarioPt"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ruaUsuarioPt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Bairro:"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bairroUsuarioPt"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/bairroUsuarioPt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="265dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Cidade:"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cidadeUsuarioPt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Número:"
        app:layout_constraintBottom_toTopOf="@+id/bairroUsuarioPt"
        app:layout_constraintEnd_toStartOf="@+id/numeroUsuarioPt"
        app:layout_constraintStart_toEndOf="@+id/ruaUsuarioPt" />

    <EditText
        android:id="@+id/numeroUsuarioPt"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="6dp"
        android:text="Estado:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/estadoUsuarioPt"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cidadeUsuarioPt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/estadoUsuarioPt"
        app:layout_constraintStart_toStartOf="@+id/estadoUsuarioPt" />

    <EditText
        android:id="@+id/estadoUsuarioPt"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="148dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/cepUsuario"
        app:layout_constraintTop_toTopOf="@+id/numeroUsuarioPt" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="21dp"
        android:text="Informações de envio"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ruaUsuarioPt"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>